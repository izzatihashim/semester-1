#include <iostream>
#include <bitset>   // For binary output
using namespace std;

int main() {
    int number;

    // Input from user
    cout << "Enter a decimal number: ";
    cin >> number;

    // Display in different bases
    cout << "Decimal: " << number << endl;
    cout << "Binary : " << bitset<16>(number) << endl;  // 16-bit binary
    cout << "Octal  : " << oct << number << endl;
    cout << "Hex    : " << hex << number << endl;

    int n1, n2, n3;
    cout << "Enter three numbers: ";
    cin >> n1 >> n2 >> n3;

    if ((n1<n2) && (n1<n3))
    cout << "Smallest number is " << n1 << endl;

    else if ((n2 < n1) && (n2 < n3))
    cout << "Smallest number is " << n2 << endl;

    else 
    cout << "Smallest numberis " << n3 << endl;

    return 0;
}
