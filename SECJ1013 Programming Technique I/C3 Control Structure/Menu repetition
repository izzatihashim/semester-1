// This program will repeatedly show the menu until the user choose to exit

#include <iostream>
using namespace std;

int main() {
    int choice;
    
    do {
    cout << "Menu:\n1. Option 1\n2. Option 2\n3. Exit\n";
    cout << "Enter your choice: ";
    cin >> choice;

    if(choice == 1) cout << "You chose Option 1\n";
    else if(choice == 2) cout << "You chose Option 2\n";
    
    } while (choice != 3);
    cout << "Exited menu." << endl;

    return 0;
}
