// This program is to ask the user to insert the password and will repeat until the user enter the correct password

#include <iostream>
using namespace std;

int main() {
    string password;
    string correct = "abc123";
    
    cout << "Enter password: ";
    cin >> password;
    
    while (password != correct) {
    cout << "Wrong password! Try again: ";
    cin >> password;
    }
    cout << "Access granted!" << endl;

    return 0;
}
